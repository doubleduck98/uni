@model zad1.Models.StartModel
@{

}

<!DOCTYPE html>

<html>
<head>
    <style>
        table, th, tr, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Print</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th colspan="3">@Html.Label(Model.Imie)</th>
                <th colspan="4">@Html.Label(Model.Nazwisko)</th>
                <th colspan="3">@Html.Label(Model.Zajecia)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>2</td>
                <td>3</td>
                <td>4</td>
                <td>5</td>
                <td>6</td>
                <td>7</td>
                <td>8</td>
                <td>9</td>
                <td>10</td>
            </tr>
            <tr>
                @if (Model.Punkty != null)
                {
                    <text>
                        @for (int i = 0; i < Model.Punkty.Length; ++i)
                        {
                            <td>@Html.Label(Model.Punkty[i].ToString())</td>
                        }
                    </text>
                }
            </tr>
        </tbody>
    </table>
</body>
</html>
